@model CVGS.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <h2>Login</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <strong>There were some errors with your log in:</strong>
            <ul>
                @foreach (var entry in ViewData.ModelState)
                {
                    foreach (var error in entry.Value.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="DisplayName"></label>
            <input asp-for="DisplayName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Login</button>
            <br />
            <div class="mt-3">
                <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
            </div>
            <br />
            <div style="display: flex; align-items: center;">
                <p style="margin: 0;">Don't have an account? </p>
                <a asp-controller="Account" asp-action="SignUp" style="margin-left: 5px;">Sign Up</a>
            </div>
        </div>
    </form>
</div>
