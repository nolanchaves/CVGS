@{
    ViewData["Title"] = "Preferences";
}

<div class="card">
    <div class="card-header">
        <h2>Preferences</h2>
    </div>
    <div class="card-body">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>There were some errors with your preference submission:</strong>
                <ul>
                    @foreach (var entry in ViewData.ModelState)
                    {
                        foreach (var error in entry.Value.Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }

        @if (Model != null)
        {
            <form asp-action="Preferences" method="post">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-header">
                                Favourite Platforms
                            </div>
                            <div class="card-body">
                                @foreach (var platform in Model.AvailablePlatforms)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="FavouritePlatforms" value="@platform"
                                        @(Model.FavouritePlatforms.Contains(platform) ? "checked" : "") />
                                        <label class="form-check-label">@platform</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-header">
                                Favourite Game Categories
                            </div>
                            <div class="card-body">
                                @foreach (var category in Model.AvailableGameCategories)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="FavouriteGameCategories" value="@category"
                                        @(Model.FavouriteGameCategories.Contains(category) ? "checked" : "") />
                                        <label class="form-check-label">@category</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-header">
                                Language Preferences
                            </div>
                            <div class="card-body">
                                @foreach (var language in Model.AvailableLanguages)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="LanguagePreferences" value="@language"
                                        @(Model.LanguagePreferences.Contains(language) ? "checked" : "") />
                                        <label class="form-check-label">@language</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Save Preferences</button>
                <a asp-controller="Account" asp-action="Dashboard" class="btn btn-success">Back to Dashboard</a>
            </form>
        }
        else
        {
            <p>Model is null.</p>
        }
    </div>
</div>
